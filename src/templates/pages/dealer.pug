extends ../template

block variables
    - var title = 'Дилеры'
    - var contactForm = true


block content
    main.dealer-page
        //- breadcrumbs
        section.cont-block__wrap.cont-block_mt40
            .cont-block
                ul.breadcrumbs__list
                    li.breadcrumbs__item
                        a.breadcrumbs__link(href="#") Главная
                        svg(width="10" height="10")
                            use(xlink:href="assets/images/sprite.svg#arrow-smal")
                    li.breadcrumbs__item
                        span.breadcrumbs__link.breadcrumbs__link_current Дилеры

        //- Дилеры
        section.cont-block__wrap.cont-block_mb120.cont-block_mt50
            .cont-block
                .cont-block__header
                    h1.cont-block__h.main-color_blue-2 Дилеры
                
                .dealers__wrap
                    p Воспользуйтесь картой для выбора дилера в своем регионе
                    img(src="assets/images/dealer-map.png", alt="")

            .dealer__bot.cont-block__wrap
                .cont-block
                    .dealer__left
                        span.dealer__caption Выберите регион (область):
                        .dealer__select-wrap
                            select(name="region")
                                option(value="Красноярский край") Красноярский край
                            svg(width="15" height="15")
                                use(xlink:href="assets/images/sprite.svg#arrow-smal")
                    .dealer__right
                        span.dealer__point Красноярск

                        .dealer__info
                            span.dealer__value Компания "Сибинструмент"
                            ul.dealer__info-list.info-list
                                li.info-list__item
                                    address Адрес:  Красноярск, ул. 60 лет Октября, 148ж, офис 306
                                li.info-list__item
                                    span Тел./факс: 
                                    a(href="tel:(391) 235-95-66") (391) 235-95-66, 
                                    span 235-96-63
                                li.info-list__item
                                    span E-mail: 
                                    a(href="mailto:krasinfo@kcu.ru") krasinfo@kcu.ru
                                li.info-list__item
                                    span URL: 
                                    a(href="www.kcu.ru") www.kcu.ru



        //- about company стать партнером
        section.cont-block__wrap.cont-block_mb120
            .cont-block
                .cont-block__header
                    h2.cont-block__h.main-color_blue-2 Стать нашим партнером

                .cooperation
